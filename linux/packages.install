#!/bin/bash

BASE_DIR=`cd "$(dirname "$0")"; pwd`
source "$BASE_DIR"/../functions/basic

cd "$BASE_DIR"

distro_name=`distro_name`
if ! [ -d "$distro_name" ]
then
    echo "Dir not found: $PWD/$distro_name"
    exit 1
fi

f=$distro_name/packages.config; [ -f "$f" ] || f=$f.sample
PACKAGES=$(cat "$f")

for package in ${PACKAGES[*]}
do
    package_install $package
done
